<script>
  // Create a function to generate a random number between min and max
  function random(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  // Create a function to generate a star
  function createStar() {
    // Create a new div element
    var star = document.createElement("div");

    // Set the star's class to "star"
    star.className = "star";

    // Set the star's position to a random location on the screen
    star.style.left = random(0, window.innerWidth) + "px";
    star.style.top = random(0, window.innerHeight) + "px";

    // Add the star to the body of the document
    document.body.appendChild(star);
  }

  // Create 100 stars
  for (var i = 0; i < 100; i++) {
    createStar();
  }
</script>
